@model dynamic

@{
    ViewBag.Title = "title";
}
@section ClientScripts
{
    <script type="text/javascript">
        function SetValidation() {
            $.validator.unobtrusive.parse("form");
            $('span.field-validation-valid, span.field-validation-error').each(function () {
                $(this).addClass('help-inline');
            });
            $('form').submit(function () {
                $("div.control-group").removeClass("success warning error");
                if ($(this).valid()) {
                    $(this).find('div.control-group').each(function () {
                        if ($(this).find('span.field-validation-error').length == 0) {
                            $(this).removeClass('error');
                        }
                    });
                }
                else {
                    $(this).find('div.control-group').each(function () {
                        if ($(this).find('span.field-validation-error').length > 0) {
                            $(this).addClass('error');
                        }
                    });
                }
            });

        }               

    </script>
}
<div class="row-fluid">
    <div class="span3">
        @Ajax.ActionLink("Activity Types", "ActivityType", "Configuration", null, new AjaxOptions { UpdateTargetId = "gridLoad", InsertionMode = InsertionMode.Replace, OnSuccess = "SetValidation" })<br/>
        @Ajax.ActionLink("Activity Results", "ActivityResult", "Configuration", null, new AjaxOptions { UpdateTargetId = "gridLoad", InsertionMode = InsertionMode.Replace, OnSuccess = "SetValidation" })<br/>
        @Ajax.ActionLink("Contact Reasons", "ContactReason", "Configuration", null, new AjaxOptions { UpdateTargetId = "gridLoad", InsertionMode = InsertionMode.Replace, OnSuccess = "SetValidation" })
    </div>
    <div class="span9">
        <div id="gridLoad"></div>
    </div>
</div>

